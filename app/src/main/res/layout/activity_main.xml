<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/startLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/firstLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/secondLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/thirdLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomFirstLine"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomSecondLine"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottomThirdLine"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"
        />

   <ImageButton
       android:layout_margin="10dp"
       android:id="@+id/button7"
       android:layout_width="0dp"
       android:layout_height="0dp"
       app:layout_constraintStart_toStartOf="@id/startLine"
       app:layout_constraintEnd_toEndOf="@id/firstLine"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="@id/bottomFirstLine"
       android:textSize="30sp"
       android:text="7"
       />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/firstLine"
        app:layout_constraintEnd_toEndOf="@id/secondLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bottomFirstLine"
        android:textSize="30sp"
        android:text="8"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/secondLine"
        app:layout_constraintEnd_toEndOf="@id/thirdLine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/bottomFirstLine"
        android:textSize="30sp"
        android:text="9"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/startLine"
        app:layout_constraintEnd_toEndOf="@id/firstLine"
        app:layout_constraintTop_toTopOf="@id/bottomFirstLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomSecondLine"
        android:textSize="30sp"
        android:text="4"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/firstLine"
        app:layout_constraintEnd_toEndOf="@id/secondLine"
        app:layout_constraintTop_toTopOf="@id/bottomFirstLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomSecondLine"
        android:textSize="30sp"
        android:text="5"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/secondLine"
        app:layout_constraintEnd_toEndOf="@id/thirdLine"
        app:layout_constraintTop_toTopOf="@id/bottomFirstLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomSecondLine"
        android:textSize="30sp"
        android:text="6"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/startLine"
        app:layout_constraintEnd_toEndOf="@id/firstLine"
        app:layout_constraintTop_toTopOf="@id/bottomSecondLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomThirdLine"
        android:textSize="30sp"
        android:text="1"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/firstLine"
        app:layout_constraintEnd_toEndOf="@id/secondLine"
        app:layout_constraintTop_toTopOf="@id/bottomSecondLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomThirdLine"
        android:textSize="30sp"
        android:text="2"
        />

    <ImageButton
        android:layout_margin="10dp"
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/secondLine"
        app:layout_constraintEnd_toEndOf="@id/thirdLine"
        app:layout_constraintTop_toTopOf="@id/bottomSecondLine"
        app:layout_constraintBottom_toBottomOf="@id/bottomThirdLine"
        android:textSize="30sp"
        android:text="3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>